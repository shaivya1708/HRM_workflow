<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.android.hrm">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/HRM"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ProfileActivity"/>
        <activity android:name=".VerifyPhoneActivity"/>
        <activity android:name=".RegistrationActivity"/>
        <activity android:name=".choose_employee_employer"/>
        <activity android:name=".Registration_employer"/>
        <activity android:name=".Employer"
            tools:ignore="Instantiatable" />
        <activity android:name=".Employer_requirement"/>
        <activity android:name=".profile"
            tools:ignore="Instantiatable" />
        <activity android:name=".home"
            tools:ignore="Instantiatable" />
        <activity android:name=".history"
            tools:ignore="Instantiatable" />


    </application>

</manifest>