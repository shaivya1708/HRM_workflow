<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EFB56E"
        android:gravity="top"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="71dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="नियोक्ता का स्वागत है"
            android:textColor="#FBFDFD"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="20sp"
            android:background="@drawable/rounded_edittext"
            android:drawableStart="@drawable/ic_action_account"
            android:ems="10"
            android:hint="नाम"
            android:inputType="textPersonName"
            android:padding="10dp" />

        <EditText
            android:id="@+id/editTextPhone2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="20sp"
            android:background="@drawable/rounded_edittext"
            android:drawableStart="@drawable/ic_phone"
            android:ems="10"
            android:hint="अपना मोबाइल नंबर डालें"
            android:inputType="phone"
            android:padding="10dp" />

        <EditText
            android:id="@+id/editTextAddress2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="20sp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:hint="घर का पता"
            android:inputType="textPostalAddress"
            android:padding="10dp" />

        <View
            android:layout_width="250sp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:background="#0F1010" />

        <Button
            android:id="@+id/button6"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30sp"
            android:background="@drawable/rounded_button"
            android:text="नियोक्ता के रूप में पंजीकरण करें"
            android:textColor="@android:color/black"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button7"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:text="प्रोफ़ाइल विंडो पर जाएं"
            android:layout_gravity="center"
            android:layout_marginTop="30sp"
            android:background="@drawable/rounded_button"
            android:textColor="@android:color/black"
            android:textSize="25sp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>